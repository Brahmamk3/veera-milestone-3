provider "aws" {
  region = "eu-west-2"
}

terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = ">= 5.0.0"
    }
  }

  required_version = ">= 1.3.0"
}

# ðŸ”¹ CHANGED: Added variable to make names unique per user
variable "owner" {
  description = "Unique owner name to avoid conflicts"
  type        = string
  default     = "veera-brahmanjaneyule" # your name
}

module "vpc" {
  source  = "terraform-aws-modules/vpc/aws"
  version = "5.1.2"

  # ðŸ”¹ CHANGED: Added owner name at the end
  name = "team4-${var.owner}-vpc"

  cidr = "10.0.0.0/16"

  # 3 AZs in London (eu-west-2)
  azs            = ["eu-west-2a", "eu-west-2b", "eu-west-2c"]
  public_subnets = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]

  enable_dns_hostnames    = true
  enable_dns_support      = true
  map_public_ip_on_launch = true

  # ðŸ”¹ CHANGED: Added unique cluster tag with owner
  tags = {
    "kubernetes.io/cluster/${var.owner}-eks-cluster" = "shared"
    Owner                                            = var.owner
    Terraform                                        = "true"
  }

  public_subnet_tags = {
    "kubernetes.io/role/elb" = "1"
  }
}

module "eks" {
  source  = "terraform-aws-modules/eks/aws"
  version = "~> 21.0"

  # ðŸ”¹ CHANGED: Added owner name at the end
  name = "team4-${var.owner}-eks-cluster"

  # ðŸ”¹ CHANGED: Fixed version (1.30 instead of 1.33 which does not exist yet)
  kubernetes_version = "1.30"

  addons = {
    coredns                = {}
    eks-pod-identity-agent = {
      before_compute = true
    }
    kube-proxy = {}
    vpc-cni    = {
      before_compute = true
    }
  }

  # Optional
  endpoint_public_access = true

  # Optional: Adds the current caller identity as an administrator via cluster access entry
  enable_cluster_creator_admin_permissions = true

  eks_managed_node_groups = {
    example = {
      # Starting on 1.30, AL2023 is the default AMI type for EKS managed node groups
      ami_type       = "AL2023_x86_64_STANDARD"
      instance_types = ["t3.medium"]

      min_size     = 2
      max_size     = 2
      desired_size = 2
    }
  }

  vpc_id     = module.vpc.vpc_id
  subnet_ids = module.vpc.public_subnets

  # ðŸ”¹ CHANGED: Added owner tag
  tags = {
    Owner     = var.owner
    Terraform = "true"
  }
}
